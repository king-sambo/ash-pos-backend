# Development Dockerfile
# ================================

FROM node:20-alpine

WORKDIR /app

# Install dependencies for hot reload
RUN npm install -g tsx

# Copy package files
COPY package*.json ./

# Install all dependencies
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 3001

# Start development server with hot reload
CMD ["npm", "run", "dev"]

